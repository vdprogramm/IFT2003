#include <stdio.h>

int main(){
	int arr[]= {2, 4,6, 8};
	int *ptr= arr;
	
	for(int i=0; i<4; i++){
		printf("%d", (*ptr+i));
	}
	printf("tim phan tu o trong mang lan 1\n", arr);
	printf("tim phan tu trong mang lan 2\n", arr);
	printf("tim phan tu trong con tro lan 3\n", arr);
	printf("tim phan tu trong con tro lan 4\n", arr);
	scanf("%d %d %d %d", arr);
	
	return 0;
} 
